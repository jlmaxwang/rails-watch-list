<%= render "nav" %>
<hr>
  <h1 class="mt-2">Movies</h1>
<div class="container-lg container-md container-sm">
  <div class="container">
    <h2 class="mt-2">What's for tonight?</h2>
    <%= render 'carousel' %>
  </div>
  <div class="container">
    <h2 class="mt-2">Also see...</h2>
    <div class="list-group">
      <% @movies.each do |movie| %>
      <a href="<%= movie_path(movie) %>" class="list-group-item list-group-item-action" aria-current="true">
        <%= movie.title %> -- <%= movie.rating %>
      </a>
      <% end %>
    </div>
  </div>
</div>
